.topbar
	background-color $color-topbar
	color #FFFFFF
	width 100%
	height 43px
	border-bottom 1px solid #FFFFFF
	
	.float-item
		margin-top 10px
		height 25px
		width 33.3%
		font-size 18px
		float left
		text-align center
		
		&.back-button
			&:disabled
				color rgba(255, 255, 255, 0.5)
		
		&.account-button
			.disabled
				color rgba(255, 255, 255, 0.5)