.statistics-overview-page
	min-height 100%
	background-color #E8E8E8
	padding-bottom 15px
	
	.statistics-overview-page-menu
		background-size 100% auto
		background-image $image-topbar
		padding 10px
		color white
		text-align center
		-webkit-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);
		-moz-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);
		box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);

		.logo-image
			width 70% 
			max-width 400px
			margin-left auto
			margin-right auto
			padding-top 10px
			padding-bottom 15px

		.user-icon
			margin-right 5px

	.page-title
		margin-top 5px !important
		font-weight bold
		padding 10px 20px 10px 30px
		text-align center
		width: 99%
		background-color white
		margin auto

	.statistic-header
		background white
		width 99%
		margin auto
		margin-top 5px
			
		.survey-name
			padding-top 15px
			padding-left 40px
			width 100%

	.no-statistics
		margin-top 5px !important
		margin auto
		width 99%
		background-color white
		padding-top 25px
		padding-bottom 20px
		padding-left 15px
		padding-right 15px
		text-align center

	.surveys
		.statistic-overview-view
			margin-top 5px !important
			margin auto
			width 99%
			background-color white
			padding-left 15px
			padding-right 15px
			height 70px
			
			.statistic-info
				float left
				overflow hidden
				white-space nowrap
				max-width 45%
				.archived-date
					padding 5px
				.achived-survey-name
					padding 5px
			
			.stats-button
				padding-top 15px
				float right

			.button-default
				font-size 18px
				margin 5px
				float right

			.delete-confirmation-buttons
				padding-top 15px
				float right
				.btn-danger
					margin-left 5px