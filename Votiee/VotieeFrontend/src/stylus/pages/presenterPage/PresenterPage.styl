@import "PresenterPagePiechart.styl"
.presenter-page
	min-height 100%
	vertical-align middle
	overflow hidden
	text-overflow ellipsis
	font-family: 'Open Sans', sans-serif 
	font-weight 300  	
	background-color white
	-webkit-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);
	-moz-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);
	box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);
		
	.header
		line-height 70px
		background-size 100% auto
		background-image $image-topbar
		color white
		font-size 28px 

		.logo-image
			width 200px
			float left
			padding-left 20px
			padding-right 30px

	.content
		margin-top 5%
		width 70%
		text-align center
		margin-left auto
		margin-right auto
		color black
		.question-text
			margin-bottom 30px
		.answer-posi
			border 3px solid $color-topbar
			border-radius 25px
			padding 10px
			font-size 22px
			margin-bottom 7px
			min-height 50px
			white-space normal

		td
			font-size 30px
			text-align left
		th
			font-size 30px
			
	.waiting
		font-family: 'Open Sans', sans-serif 
		font-size 28px 
		height 100%
		.ball-loader
			margin auto
			display block
			