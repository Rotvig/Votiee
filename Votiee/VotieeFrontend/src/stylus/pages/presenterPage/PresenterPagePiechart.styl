.presenter-page
	.piechart
		margin-top 5%
		.piechart-container
			#chart
				float left
				margin-left 20%
				> svg > g > g > text
					font-size 18px
					fill white
					font-weight 700
			.legends
				margin-top 30px
				margin-left 30px	
				float left
				.legend
					height 30px
					margin-top 10px
					text-align initial
					.legend-color
						height 30px
						width 30px
						float left
					.text
						white-space nowrap
						width 205px
						padding-left 30px
						padding-top 3px
						font-size 18px
						margin-left 10px