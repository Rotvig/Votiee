.survey-page
	min-height 100%
	background-color #E8E8E8

	.option-buttons
		float right

	.delete-button		
		margin-top 15px
		float left
		padding 0

	.option-button
		padding 0
		margin-top 15px
		float right

	.move-buttons
		float left
						
		button
			width 100%
			&:disabled
				opacity: 0.4

	.button-default
		font-size 28px
		&.back-button
			font-size 18px

	.survey-page-menu
		margin-bottom 44px
		.start-bar
			background-size 100% auto
			background-image $image-topbar
			padding 10px
			min-height 115px
			-webkit-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);
			-moz-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);
			box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);

			.text-message
				margin-top 60px
				color white
				
				.code-message
					text-align center
					font-weight bold

				.error-message
					text-align center
					font-weight bold
			
			.start-button
				height 40px
				float right
				
			.survey-spinner
				float left
				.glyphicon-ok
					color green
					font-size 23px
					width 21px
					height 21px
				.spinner
					border-top-color white
					border-bottom-color white
					border-left-color white
					float left
					margin-top 18px
					width 10px
					height 10px

				.spinner-text
					float left
					color white
					margin-top 17px
					margin-left 10px
				
			.survey-name
				height 44px
				margin auto
				width 80%
				border 0
				text-align center
				margin auto
	
				.survey-name-form
					.survey-name-input
						float left
						background-color white
						color black
						width 80%
						height 35px

					.survey-name-ok-button
						float right
						width 18%
						height 35px
	
				.survey-name-text-field
					color #FFFFFF
					.name
						margin-left 10px
		
		.add-button
			margin 10px

		.survey-item
			margin-top 5px !important
			margin auto
			padding-bottom 5px 
			width 99%
			background-color white

			.expand-toolbar
				padding-top 10px
				padding-left 15px
				padding-right 15px
				min-height 64px
				background-color white
				margin auto
				width 95%					

				.question-label
					float left
					height 20px
					max-width 90%
					text-overflow ellipsis
					white-space nowrap
					overflow hidden

			.survey-item-background
				width 98%
				margin auto
				height 100%
				background-color #F2F2F2
				border 1.8px solid #C3C3C3

				.survey-item-input
					padding 5px
					width 95%
					margin auto

				.answer-input-view
					margin auto
					border-top 1px solid  #C3C3C3
					padding 5px
					width 95%
					
					.option-buttons
						margin-top -12px
					
					.answer-field
						height 40px

						.answer-input
							width 86%
							float left
							&.option-buttons-shown
								width 50%
		
			.button-default
				font-size 18px