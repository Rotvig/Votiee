.login-page
	min-height 100%
	background-color #E8E8E8

	.page-top-box
		background-size 100% auto
		background-image $image-topbar
		-webkit-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);
		-moz-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);
		box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);

		.logo-image
			width 70% 
			max-width 400px
			margin-left auto
			margin-right auto
			padding-top 10px
			padding-bottom 15px
	
	.toggle-button
		margin-top 5px
		width 50%

	.login-register
		margin 5px
		padding 5px
		background-color white

	.error-message
		margin-top 10px
		color red

	.form-group
		margin-top 20px
