.surveys-overview-page
	min-height 100%
	background-color #E8E8E8

	.button-default
		font-size 28px
		&.back-button
			font-size 18px
	
	.menu-button
		width 96%
		height 40px
		margin 10px 2% 10px 2%

	.surveys-overview-page-menu
		background-size 100% auto
		background-image $image-topbar
		padding 10px
		color white
		text-align center
		-webkit-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);
		-moz-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);
		box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);

		.logo-image
			width 70% 
			max-width 400px
			margin-left auto
			margin-right auto
			padding-top 10px
			padding-bottom 15px

		.user-icon
			margin-right 5px

	.page-title
		margin-top 5px !important
		font-weight bold
		padding 10px 20px 10px 30px
		text-align center
		width: 99%
		background-color white
		margin auto

	.no-surveys
		margin-top 5px !important
		margin auto
		width 99%
		background-color white
		padding-top 25px
		padding-bottom 20px
		padding-left 15px
		padding-right 15px
		text-align center

	.survey-view
		margin-top 5px !important
		margin auto
		padding-bottom 40px 
		width 99%
		background-color white
		padding-top 10px
		padding-left 15px
		padding-right 15px

		.button-default
			font-size 14px
			margin 5px
			float right
			
		.survey-label
			float left
			height 20px
			max-width 40%
			text-overflow ellipsis
			white-space nowrap
			overflow hidden

		.delete-confirmation-buttons
			float right
			margin-right 10px
			.btn-danger
				margin-left 5px
		
		