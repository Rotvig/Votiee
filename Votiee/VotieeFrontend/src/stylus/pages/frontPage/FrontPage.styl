
.front-page
	width 100%
	min-height 100%
	background-color white

	.page-top-box
		background-size 100% auto
		background-image $image-topbar
		-webkit-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);
		-moz-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);
		box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.21);

		.logo-image
			width 70% 
			max-width 400px
			margin-left auto
			margin-right auto
			padding-top 10px
			padding-bottom 15px

	.front-page-content
		text-align center
		margin auto
		margin-top 15vh
		width 85%
		
		.participate-text
			font-family: 'Open Sans', sans-serif 
			font-weight 300  	
			font-size 18px	

		.menu-button
			width 100%
			height 50px
			margin 10px 0 0 0

			.input-button-toggle
				width 100%
				height 50px

			.input-button-load
				width 20%
				float right
				height 50px

			.input-button-input
				width 78% !important
				float left
				height 50px

		.session-not-found-text
			color red
			margin-top 10px

		.editor-button-part
			margin-top 100px

			.editor-button
				margin-top 10px
				margin-bottom 10px